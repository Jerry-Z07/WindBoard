<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="BottomButtonBaseStyle" TargetType="Control">
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="2,0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="MinWidth" Value="60"/>
    </Style>

    <Style x:Key="BottomRadioButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource BottomButtonBaseStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}">
                            <materialDesign:PackIcon Kind="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Width="24" Height="24"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,4"/>
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="12"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#3E3F43"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#35363A"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BottomButtonStyle" TargetType="Button" BasedOn="{StaticResource BottomButtonBaseStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="{TemplateBinding Padding}">
                            <materialDesign:PackIcon Kind="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                                     Width="24" Height="24"
                                                     HorizontalAlignment="Center"
                                                     Margin="0,0,0,4"/>
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="12"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#3E3F43"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#35363A"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- Slide-to-Clear Slider resources -->
    <SolidColorBrush x:Key="SlideToClearTrackBrush" Color="#303137"/>
    <LinearGradientBrush x:Key="SlideToClearProgressBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#5BA1FF" Offset="0"/>
        <GradientStop Color="#2F7DFF" Offset="1"/>
    </LinearGradientBrush>

    <Style x:Key="SlideToClearSliderStyle" TargetType="{x:Type Slider}">
        <Setter Property="Height" Value="48"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="Background" Value="{StaticResource SlideToClearTrackBrush}"/>
        <Setter Property="IsMoveToPointEnabled" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
                    <Grid SnapsToDevicePixels="True" MinHeight="48">
                        <Border x:Name="TrackBg" CornerRadius="24" Background="{TemplateBinding Background}"/>
                        <Grid Margin="4" ClipToBounds="True">
                            <Track x:Name="PART_Track" IsDirectionReversed="False">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                                  Background="{x:Null}" BorderBrush="{x:Null}"
                                                  IsHitTestVisible="False">
                                        <Border CornerRadius="20" Background="{StaticResource SlideToClearProgressBrush}"/>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                                  Background="{x:Null}" BorderBrush="{x:Null}"
                                                  IsHitTestVisible="False">
                                        <Border Background="#00000000"/>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="40" Height="40">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Grid>
                                                    <Ellipse Fill="#FAFAFA" Stroke="#E0E0E0" StrokeThickness="1">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="1" Opacity="0.3"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <materialDesign:PackIcon Kind="DeleteSweep" Width="20" Height="20" Foreground="#2F7DFF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.4"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>