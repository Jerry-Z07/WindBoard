<UserControl x:Class="WindBoard.Controls.PageNavigatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WindBoard.Controls"
             xmlns:wind="clr-namespace:WindBoard">
    <UserControl.Resources>
        <!-- 只有多页时才显示 -->
        <Style x:Key="MultiPageOnly" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMultiPage, RelativeSource={RelativeSource AncestorType=local:PageNavigatorControl}}"
                             Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 扁平化导航按钮，移除 MaterialDesign 默认悬停/按下/焦点底色 -->
        <Style x:Key="FlatNavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#25262A"
            CornerRadius="12"
            Padding="6"
            Effect="{StaticResource MaterialDesignShadowDepth2}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

            <Button x:Name="BtnPrev"
                    Style="{StaticResource FlatNavButtonStyle}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="14,8"
                    Click="BtnPrev_Click">
                <Button.Visibility>
                    <Binding Path="IsMultiPage" RelativeSource="{RelativeSource AncestorType=local:PageNavigatorControl}">
                        <Binding.Converter>
                            <BooleanToVisibilityConverter/>
                        </Binding.Converter>
                    </Binding>
                </Button.Visibility>
                <materialDesign:PackIcon Kind="ChevronLeft" Width="24" Height="24" Foreground="#E0E0E0"/>
            </Button>

            <Button x:Name="BtnIndicator"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="14,8"
                    Click="BtnIndicator_Click"
                    Style="{StaticResource FlatNavButtonStyle}"
                    Visibility="{Binding IsMultiPage, RelativeSource={RelativeSource AncestorType=local:PageNavigatorControl}, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="{Binding PageIndicatorText, RelativeSource={RelativeSource AncestorType=local:PageNavigatorControl}}"
                           Foreground="#2F7DFF"
                           FontWeight="SemiBold"
                           FontSize="14"
                           VerticalAlignment="Center"/>
            </Button>

            <Button x:Name="BtnNext"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="14,8"
                    Click="BtnNext_Click"
                    Style="{StaticResource FlatNavButtonStyle}"
                    Visibility="{Binding IsMultiPage, RelativeSource={RelativeSource AncestorType=local:PageNavigatorControl}, Converter={StaticResource BoolToVis}}">
                <materialDesign:PackIcon Kind="ChevronRight" Width="24" Height="24" Foreground="#E0E0E0"/>
            </Button>

            <Button x:Name="BtnAdd"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="14,8"
                    Click="BtnAdd_Click"
                    Style="{StaticResource FlatNavButtonStyle}">
                <materialDesign:PackIcon Kind="Plus" Width="24" Height="24" Foreground="#E0E0E0"/>
            </Button>

            <!-- 页面管理 Popup -->
            <Popup x:Name="PopupPageManager"
                   PlacementTarget="{Binding ElementName=BtnIndicator}"
                   Placement="Top"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade">
                <Border Background="#25262A"
                        CornerRadius="16"
                        Padding="14"
                        Width="260"
                        Effect="{StaticResource MaterialDesignShadowDepth2}">
                    <StackPanel>
                        <TextBlock Text="页面管理"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="2,2,2,12"/>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                      MaxHeight="520"
                                      PanningMode="VerticalOnly">
                            <ItemsControl ItemsSource="{Binding Pages, RelativeSource={RelativeSource AncestorType=local:PageNavigatorControl}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type wind:BoardPage}">
                                        <Border CornerRadius="12"
                                                Margin="0,0,0,12"
                                                BorderThickness="2"
                                                Background="#1E2024">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                            <Setter Property="BorderBrush" Value="#2F7DFF"/>
                                                            <Setter Property="Background" Value="#202A3A"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid Margin="10,10,10,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="0"
                                                            HorizontalAlignment="Left"
                                                            Click="PageItem_Click"
                                                            Tag="{Binding}">
                                                        <TextBlock Text="{Binding Number}"
                                                                   Foreground="White"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"/>
                                                    </Button>

                                                    <Button Grid.Column="1"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Padding="4"
                                                            Click="DeletePage_Click"
                                                            Tag="{Binding}">
                                                        <materialDesign:PackIcon Kind="TrashCanOutline"
                                                                                 Width="18" Height="18"
                                                                                 Foreground="#E0E0E0"/>
                                                    </Button>
                                                </Grid>

                                                <Border Grid.Row="1"
                                                        Margin="10,0,10,10"
                                                        CornerRadius="10"
                                                        Background="#0F1216"
                                                        Height="120"
                                                        Tag="{Binding}"
                                                        Cursor="Hand"
                                                        MouseLeftButtonUp="PageItem_Click">
                                                    <Image Source="{Binding Preview}" Stretch="UniformToFill"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Popup>

        </StackPanel>
    </Border>
</UserControl>
