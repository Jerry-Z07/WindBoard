<UserControl x:Class="WindBoard.Views.Dialogs.ImportDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinWidth="560"
             MaxWidth="760">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource ImportDialog_Title}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#111"
                   Margin="0,0,0,12"/>

        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource ImportDialog_Tab_Image}">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Padding="14,8"
                                Click="PickImages_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_Image_Pick}"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="14,8"
                                Margin="8,0,0,0"
                                Click="ClearImages_Click">
                            <TextBlock Text="{DynamicResource Common_ClearAll}"/>
                        </Button>
                    </StackPanel>
                    <Border Grid.Row="1" Margin="0,12,0,0" CornerRadius="10" BorderThickness="1" BorderBrush="#E0E0E0">
                        <ListBox ItemsSource="{Binding ImagePaths}" MinHeight="140"/>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource ImportDialog_Tab_Video}">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Padding="14,8"
                                Click="PickVideos_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_Video_Pick}"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="14,8"
                                Margin="8,0,0,0"
                                Click="ClearVideos_Click">
                            <TextBlock Text="{DynamicResource Common_ClearAll}"/>
                        </Button>
                    </StackPanel>
                    <Border Grid.Row="1" Margin="0,12,0,0" CornerRadius="10" BorderThickness="1" BorderBrush="#E0E0E0">
                        <ListBox ItemsSource="{Binding VideoPaths}" MinHeight="140"/>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource ImportDialog_Tab_Text}">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{DynamicResource ImportDialog_Text_Title}" Foreground="#444" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="1"
                             Text="{Binding TextContent, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="120"
                             Margin="0,8,0,0"/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Padding="14,8"
                                Click="PickTextFiles_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_Text_FromFiles}"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="14,8"
                                Margin="8,0,0,0"
                                Click="ClearTextFiles_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_Text_ClearFileList}"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="14,8"
                                Margin="8,0,0,0"
                                Click="PasteText_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_PasteFromClipboard}"/>
                        </Button>
                    </StackPanel>

                    <Border Grid.Row="3" Margin="0,10,0,0" CornerRadius="10" BorderThickness="1" BorderBrush="#E0E0E0">
                        <ListBox ItemsSource="{Binding TextFilePaths}" MinHeight="120"/>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource ImportDialog_Tab_Links}">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{DynamicResource ImportDialog_Links_Hint}" Foreground="#444"/>
                    <TextBox Grid.Row="1"
                             Text="{Binding LinkLines, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="180"
                             Margin="0,8,0,0"/>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="14,8"
                                Click="PasteLinks_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_PasteFromClipboard}"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="14,8"
                                Margin="8,0,0,0"
                                Click="ClearLinks_Click">
                            <TextBlock Text="{DynamicResource Common_ClearAll}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="{DynamicResource ImportDialog_Tab_Wbi}">
                <Grid Margin="0,12,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Padding="14,8"
                                Click="PickWbiFile_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_Wbi_Pick}"/>
                        </Button>
                        <Button Name="BtnClearWbi"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Padding="14,8"
                                Margin="8,0,0,0"
                                Visibility="Collapsed"
                                Click="ClearWbiFile_Click">
                            <TextBlock Text="{DynamicResource ImportDialog_Wbi_Clear}"/>
                        </Button>
                    </StackPanel>

                    <!-- WBI 文件信息 -->
                    <Border Name="WbiFileInfo" Grid.Row="1" Margin="0,12,0,0"
                            Background="#F5F5F5" CornerRadius="8" Padding="12"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Name="TxtWbiFileName" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBlock Name="TxtWbiPageCount" Foreground="#666" Margin="0,4,0,0"/>
                            <TextBlock Name="TxtWbiCreatedAt" Foreground="#888" FontSize="12" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- 导入模式 -->
                    <StackPanel Name="WbiImportMode" Grid.Row="2" Margin="0,12,0,0" Visibility="Collapsed">
                        <TextBlock Text="{DynamicResource ImportDialog_Wbi_ImportMode_Title}" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,8"/>
                        <RadioButton Name="RbAppendPages" Content="{DynamicResource ImportDialog_Wbi_ImportMode_Append}" IsChecked="True" Margin="0,0,0,4"/>
                        <RadioButton Name="RbReplacePages" Content="{DynamicResource ImportDialog_Wbi_ImportMode_Replace}"/>
                    </StackPanel>

                    <!-- 说明 -->
                    <Border Grid.Row="3" Background="#E3F2FD" CornerRadius="8" Padding="12" Margin="0,12,0,0"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource ImportDialog_Wbi_About_Title}" FontWeight="SemiBold" Foreground="#1565C0"/>
                            <TextBlock TextWrapping="Wrap" Foreground="#666" Margin="0,4,0,0"
                                       Text="{DynamicResource ImportDialog_Wbi_About_Text}"/>
                            <TextBlock Name="TxtWbiWarning" TextWrapping="Wrap" Foreground="#E65100" Margin="0,8,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                    MinWidth="90"
                    Margin="0,0,8,0"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    Content="{DynamicResource Common_Cancel}"/>
            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                    MinWidth="120"
                    Click="Import_Click"
                    Content="{DynamicResource ImportDialog_Button_Import}"/>
        </StackPanel>
    </Grid>
</UserControl>
