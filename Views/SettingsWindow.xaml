<Window x:Class="WindBoard.SettingsWindow" x:Name="SettingsWindowRoot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{DynamicResource SettingsWindow_Title}" Height="650" Width="950"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontFamily="{DynamicResource AppFontFamily}"
        ResizeMode="CanResizeWithGrip">
    
    <materialDesign:DialogHost Identifier="SettingsDialogHost" DialogTheme="Inherit">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <materialDesign:ColorZone Mode="PrimaryMid" Padding="20,16" materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="CogOutline" Width="28" Height="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="{DynamicResource SettingsWindow_Title}" Style="{StaticResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,1,0" Background="{DynamicResource MaterialDesignCardBackground}">
                    <ListBox x:Name="NavList" SelectedIndex="0" Padding="0,12" BorderThickness="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                <Setter Property="Padding" Value="20,14"/>
                                <Setter Property="Margin" Value="0,2"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBoxItem IsSelected="True">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CogOutline" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource SettingsWindow_Nav_General}" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pen" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource SettingsWindow_Nav_Writing}" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PaletteOutline" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource SettingsWindow_Nav_Appearance}" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="InformationOutline" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource SettingsWindow_Nav_About}" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Border>

                <ScrollViewer Grid.Column="1" Padding="36,24" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
                    <StackPanel>
                        <!-- 基本设置 面板（索引 0） -->
                        <StackPanel x:Name="BasicSettingsPanel">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=NavList, Path=SelectedIndex}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                        <!-- 基本设置 · 语言 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Translate" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_Language_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_Language_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <ComboBox Grid.Column="2"
                                          VerticalAlignment="Center"
                                          MinWidth="160"
                                          ItemsSource="{Binding ElementName=SettingsWindowRoot, Path=AppLanguageItems}"
                                          DisplayMemberPath="DisplayName"
                                          SelectedValuePath="Language"
                                          SelectedValue="{Binding ElementName=SettingsWindowRoot, Path=AppLanguage, Mode=TwoWay}"/>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 基本设置 · 视频展台 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Video" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_VideoPresenter_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_VideoPresenter_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="{DynamicResource SettingsWindow_General_VideoPresenter_Toggle}"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=VideoPresenterEnabled, Mode=TwoWay}"
                                          Checked="ToggleVideoPresenter_Checked"
                                          Unchecked="ToggleVideoPresenter_Unchecked"/>

                                <!-- 程序路径 -->
                                <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{DynamicResource SettingsWindow_General_VideoPresenter_Path_Label}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBox Grid.Column="1"
                                              Text="{Binding ElementName=SettingsWindowRoot, Path=VideoPresenterPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                              materialDesign:HintAssist.Hint="{DynamicResource SettingsWindow_General_VideoPresenter_Path_Hint}"/>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="{DynamicResource Common_Browse}"
                                                Margin="0,0,0,0"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Click="BtnBrowseVideoPresenterPath_Click"
                                                materialDesign:ButtonAssist.CornerRadius="6"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 启动参数 -->
                                <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{DynamicResource SettingsWindow_General_VideoPresenter_Args_Label}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBox Grid.Column="1"
                                              Text="{Binding ElementName=SettingsWindowRoot, Path=VideoPresenterArgs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                              materialDesign:HintAssist.Hint="{DynamicResource SettingsWindow_General_VideoPresenter_Args_Hint}"/>
                                </Grid>

                                <!-- 恢复默认 -->
                                <Button Grid.Row="3" Grid.ColumnSpan="3"
                                        Content="{DynamicResource Common_ResetDefault}"
                                        Margin="0,16,0,0"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="BtnResetVideoPresenterDefaults_Click"
                                        materialDesign:ButtonAssist.CornerRadius="6"/>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 基本设置 · 伪装 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Incognito" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_Camouflage_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_Camouflage_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="{DynamicResource Common_Enable}"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=CamouflageEnabled, Mode=TwoWay}"
                                          Checked="ToggleCamouflage_Checked"
                                          Unchecked="ToggleCamouflage_Unchecked"/>

                                <!-- 应用标题 -->
                                <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{DynamicResource SettingsWindow_General_Camouflage_AppTitle_Label}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBox Grid.Column="1"
                                              Text="{Binding ElementName=SettingsWindowRoot, Path=CamouflageTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                              materialDesign:HintAssist.Hint="{DynamicResource SettingsWindow_General_Camouflage_AppTitle_Hint}"/>
                                </Grid>

                                <!-- 图标选择 -->
                                <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0">
                                        <TextBlock Text="{DynamicResource SettingsWindow_General_Camouflage_Icon_Label}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                         <TextBox Grid.Row="0"
                                                  Text="{Binding ElementName=SettingsWindowRoot, Path=CamouflageSourcePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                  materialDesign:HintAssist.Hint="{DynamicResource SettingsWindow_General_Camouflage_Icon_Hint}"/>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                                            <Border Width="40" Height="40" CornerRadius="6" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}" VerticalAlignment="Center">
                                                <Image Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       Source="{Binding ElementName=SettingsWindowRoot, Path=CamouflageIconPreview}" Stretch="Uniform"/>
                                            </Border>
                                             <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                                 <TextBlock Text="{Binding ElementName=SettingsWindowRoot, Path=CamouflageSourceDisplayName}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}"/>
                                                <TextBlock Text="{DynamicResource SettingsWindow_General_Camouflage_Icon_SupportHint}" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.6"/>
                                             </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="{DynamicResource Common_Browse}"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Click="BtnBrowseCamouflageIcon_Click"
                                                materialDesign:ButtonAssist.CornerRadius="6"
                                                Margin="0,0,8,0"/>
                                        <Button Content="{DynamicResource Common_Clear}"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Click="BtnClearCamouflageIcon_Click"
                                                materialDesign:ButtonAssist.CornerRadius="6"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 快捷方式 -->
                                <Grid Grid.Row="3" Grid.ColumnSpan="3" Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{DynamicResource SettingsWindow_General_Camouflage_Shortcut_Desc}"
                                               Opacity="0.6"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>

                                    <Button Grid.Column="1"
                                            Content="{DynamicResource SettingsWindow_General_Camouflage_CreateShortcut_Button}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Click="BtnCreateCamouflageShortcut_Click"
                                            materialDesign:ButtonAssist.CornerRadius="6"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 基本设置 · 触摸手势 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CogOutline" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_TouchGestures_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_General_TouchGestures_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="{DynamicResource SettingsWindow_General_TouchGestures_Toggle}"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=ZoomPanTwoFingerOnly, Mode=TwoWay}"
                                          Checked="ToggleZoomPanTwoFingerOnly_Checked"
                                          Unchecked="ToggleZoomPanTwoFingerOnly_Unchecked"/>
                            </Grid>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- 书写设置 面板（索引 1） -->
                    <StackPanel x:Name="InkSettingsPanel">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=NavList, Path=SelectedIndex}" Value="1">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <!-- 书写设置 · 笔迹平滑 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Brush" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_Writing_Smoothing_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_Writing_Smoothing_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <ComboBox Grid.Column="2"
                                          VerticalAlignment="Center"
                                          MinWidth="160"
                                          ItemsSource="{Binding ElementName=SettingsWindowRoot, Path=StrokeSmoothingModeItems}"
                                          DisplayMemberPath="DisplayName"
                                          SelectedValuePath="Mode"
                                          SelectedValue="{Binding ElementName=SettingsWindowRoot, Path=StrokeSmoothingMode, Mode=TwoWay}"/>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 书写设置 · 笔触粗细一致性 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatLineWeight" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_Writing_ThicknessConsistency_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_Writing_ThicknessConsistency_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="{DynamicResource Common_Enable}"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=StrokeThicknessConsistencyEnabled, Mode=TwoWay}"
                                          Checked="ToggleStrokeThicknessConsistency_Checked"
                                          Unchecked="ToggleStrokeThicknessConsistency_Unchecked"/>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 书写设置 · 模拟压感（签字笔） -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Pen" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_Writing_SimulatedPressure_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_Writing_SimulatedPressure_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="{DynamicResource Common_Enable}"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=SimulatedPressureEnabled, Mode=TwoWay}"
                                          Checked="ToggleSimulatedPressure_Checked"
                                          Unchecked="ToggleSimulatedPressure_Unchecked"/>
                            </Grid>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- 外观设置 面板（索引 2） -->
                    <StackPanel x:Name="AppearanceSettingsPanel">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=NavList, Path=SelectedIndex}" Value="2">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <!-- 外观设置 · 背景颜色 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatColorFill" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="{DynamicResource SettingsWindow_Appearance_BackgroundColor_Title}" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{DynamicResource SettingsWindow_Appearance_BackgroundColor_Desc}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <materialDesign:PopupBox x:Name="ColorPopupBox" Grid.Column="2" StaysOpen="True" PlacementMode="BottomAndAlignRightEdges">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <Border CornerRadius="8" BorderThickness="1.5" BorderBrush="{DynamicResource MaterialDesignDivider}" Padding="12,8" Background="{DynamicResource MaterialDesignPaper}" Cursor="Hand" materialDesign:ElevationAssist.Elevation="Dp1">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Border Width="28" Height="28" CornerRadius="4" Margin="0,0,12,0" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{Binding ElementName=SettingsWindowRoot, Path=CurrentBrush}"/>
                                                <TextBlock Text="{Binding ElementName=SettingsWindowRoot, Path=CurrentColorHex}" VerticalAlignment="Center" Margin="0,0,8,0" FontFamily="Consolas"/>
                                                <materialDesign:PackIcon Kind="ChevronDown" VerticalAlignment="Center" Width="18" Height="18"/>
                                            </StackPanel>
                                        </Border>
                                    </materialDesign:PopupBox.ToggleContent>
                                    
                                    <StackPanel Width="280">
                                        <TextBlock Text="{DynamicResource SettingsWindow_Appearance_PresetColors_Title}" Margin="16,12" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.7" FontWeight="Medium"/>
                                        <ItemsControl Margin="16,0,16,12">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#2E2F33" ToolTip="{DynamicResource SettingsWindow_Appearance_PresetColor_DefaultDark_Tooltip}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#2E2F33"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#2F4F4F" ToolTip="{DynamicResource SettingsWindow_Appearance_PresetColor_DarkSlateGray_Tooltip}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#2F4F4F"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#DCDCDC" ToolTip="{DynamicResource SettingsWindow_Appearance_PresetColor_Gainsboro_Tooltip}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#DCDCDC"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#F5F5F5" ToolTip="{DynamicResource SettingsWindow_Appearance_PresetColor_WhiteSmoke_Tooltip}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#F5F5F5"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#FFFFFF" ToolTip="{DynamicResource SettingsWindow_Appearance_PresetColor_White_Tooltip}" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#FFFFFF"/>
                                                </Button.Background>
                                            </Button>
                                        </ItemsControl>
                                        <Separator Margin="12,0"/>
                                        <Button Click="OpenColorPicker_Click" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left" Padding="16,12" materialDesign:ButtonAssist.CornerRadius="0" Width="280" Height="48">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Palette" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="{DynamicResource SettingsWindow_Appearance_CustomColor_Button}"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:PopupBox>

                                <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                        <TextBox x:Name="HexTextBox"
                                                 Width="180"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="{DynamicResource SettingsWindow_Appearance_Hex_Hint}"
                                                 Text="{Binding ElementName=SettingsWindowRoot, Path=CurrentColorHex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 KeyDown="HexInput_KeyDown"
                                                 FontFamily="Consolas"
                                                 FontSize="13"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Content="{DynamicResource Common_ResetDefault}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Tag="#2E2F33"
                                            Click="BtnResetColor_Click"
                                            materialDesign:ButtonAssist.CornerRadius="6"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- 关于 面板（索引 3） -->
                    <StackPanel x:Name="AboutPanel">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=NavList, Path=SelectedIndex}" Value="3">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <materialDesign:Card Padding="28" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Width="96" Height="96" CornerRadius="24" Background="{DynamicResource PrimaryHueLightBrush}" Padding="14">
                                    <Image Source="/Resources/icons/icon.png" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <TextBlock Text="{DynamicResource App_Name}"
                                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                           FontWeight="SemiBold"
                                           TextAlignment="Center"
                                           Margin="0,16,0,6"/>

                                <TextBlock Text="{DynamicResource App_Tagline}"
                                           Style="{StaticResource MaterialDesignBodyMediumTextBlock}"
                                           Opacity="0.7"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"
                                           MaxWidth="420"/>

                                <StackPanel Margin="0,16,0,0" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontSize="13" Opacity="0.75" TextAlignment="Center" VerticalAlignment="Center">
                                            <Run Text="{DynamicResource SettingsWindow_About_Version_Label}"/>
                                            <Run Text="{Binding ElementName=SettingsWindowRoot, Path=AppVersion, Mode=OneWay}"/>
                                        </TextBlock>

                                        <Button Click="BtnCheckUpdates_Click"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Height="30"
                                                Margin="12,0,0,0"
                                                Padding="12,0"
                                                materialDesign:ButtonAssist.CornerRadius="8">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialDesign:PackIcon Kind="Update" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="{DynamicResource SettingsWindow_About_CheckUpdates_Button}" VerticalAlignment="Center" FontSize="13" Margin="0,1,0,0"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <CheckBox Margin="0,10,0,0"
                                              HorizontalAlignment="Center"
                                              IsChecked="{Binding ElementName=SettingsWindowRoot, Path=AutoCheckUpdatesEnabled, Mode=TwoWay}"
                                              Content="{DynamicResource SettingsWindow_About_AutoCheckUpdates_Label}"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource SettingsWindow_About_Links_Title}"
                                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,12"/>

                                <WrapPanel HorizontalAlignment="Center">
                                    <Button Click="BtnOpenGitHub_Click"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Height="40"
                                            Padding="20,0"
                                            materialDesign:ButtonAssist.CornerRadius="10">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Github" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="{DynamicResource SettingsWindow_About_Github_Button}" VerticalAlignment="Center" FontSize="14" Margin="0,1,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </WrapPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- 统一底部操作栏 -->
            <Border Grid.Row="2" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0" Background="{DynamicResource MaterialDesignPaper}" Padding="16,12" materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="BtnCancel" Click="BtnCancel_Click" Style="{StaticResource MaterialDesignOutlinedButton}" IsCancel="True" Margin="0,0,8,0" materialDesign:ButtonAssist.CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Close" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource Common_Cancel}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnApply" Click="BtnApply_Click" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,8,0" materialDesign:ButtonAssist.CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CheckAll" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource Common_Apply}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnOk" Click="BtnOk_Click" Style="{StaticResource MaterialDesignRaisedButton}" IsDefault="True" materialDesign:ButtonAssist.CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Check" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{DynamicResource Common_OK}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Window>
