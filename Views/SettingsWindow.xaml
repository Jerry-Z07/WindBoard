<Window x:Class="WindBoard.SettingsWindow" x:Name="SettingsWindowRoot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="应用设置" Height="650" Width="950"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontFamily="pack://application:,,,/WindBoard;component/resources/fonts/#MiSans"
        ResizeMode="CanResizeWithGrip">
    
    <materialDesign:DialogHost Identifier="SettingsDialogHost" DialogTheme="Inherit">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <materialDesign:ColorZone Mode="PrimaryMid" Padding="20,16" materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="CogOutline" Width="28" Height="28" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="应用设置" Style="{StaticResource MaterialDesignHeadline5TextBlock}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,1,0" Background="{DynamicResource MaterialDesignCardBackground}">
                    <ListBox x:Name="NavList" SelectedIndex="0" Padding="0,12" BorderThickness="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                <Setter Property="Padding" Value="20,14"/>
                                <Setter Property="Margin" Value="0,2"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBoxItem IsSelected="True">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CogOutline" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="基本设置" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pen" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="书写设置" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PaletteOutline" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="外观设置" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="InformationOutline" Width="20" Height="20" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="关于" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Border>

                <ScrollViewer Grid.Column="1" Padding="36,24" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
                    <StackPanel>
                        <!-- 基本设置 面板（索引 0） -->
                        <StackPanel x:Name="BasicSettingsPanel">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=NavList, Path=SelectedIndex}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                        <!-- 基本设置 · 视频展台 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Video" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="视频展台" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="配置视频展台软件路径与参数，并控制按钮显示" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="显示"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=VideoPresenterEnabled, Mode=TwoWay}"
                                          Checked="ToggleVideoPresenter_Checked"
                                          Unchecked="ToggleVideoPresenter_Unchecked"/>

                                <!-- 程序路径 -->
                                <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="程序路径" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding ElementName=SettingsWindowRoot, Path=VideoPresenterPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="选择视频展台 EXE"/>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="浏览…"
                                                Margin="0,0,0,0"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Click="BtnBrowseVideoPresenterPath_Click"
                                                materialDesign:ButtonAssist.CornerRadius="6"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 启动参数 -->
                                <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="附加参数" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding ElementName=SettingsWindowRoot, Path=VideoPresenterArgs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="例如：-from en5"/>
                                </Grid>

                                <!-- 恢复默认 -->
                                <Button Grid.Row="3" Grid.ColumnSpan="3"
                                        Content="恢复默认"
                                        Margin="0,16,0,0"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Click="BtnResetVideoPresenterDefaults_Click"
                                        materialDesign:ButtonAssist.CornerRadius="6"/>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 基本设置 · 伪装 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Top">
                                    <materialDesign:PackIcon Kind="Incognito" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="伪装" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="替换应用标题与图标（支持选择 exe 或图片）" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="开启"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=CamouflageEnabled, Mode=TwoWay}"
                                          Checked="ToggleCamouflage_Checked"
                                          Unchecked="ToggleCamouflage_Unchecked"/>

                                <!-- 应用标题 -->
                                <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,16,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="应用标题" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding ElementName=SettingsWindowRoot, Path=CamouflageTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="显示在标题栏/任务栏的名称"/>
                                </Grid>

                                <!-- 图标选择 -->
                                <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0">
                                        <TextBlock Text="图标/程序" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="0"
                                                 Text="{Binding ElementName=SettingsWindowRoot, Path=CamouflageSourcePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="选择可执行文件或图标/图片"/>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                                            <Border Width="40" Height="40" CornerRadius="6" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{DynamicResource MaterialDesignCardBackground}" VerticalAlignment="Center">
                                                <Image Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       Source="{Binding ElementName=SettingsWindowRoot, Path=CamouflageIconPreview}" Stretch="Uniform"/>
                                            </Border>
                                            <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ElementName=SettingsWindowRoot, Path=CamouflageSourceDisplayName}" Style="{StaticResource MaterialDesignBodyMediumTextBlock}"/>
                                                <TextBlock Text="支持 exe/ico/png/jpg" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.6"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="浏览…"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Click="BtnBrowseCamouflageIcon_Click"
                                                materialDesign:ButtonAssist.CornerRadius="6"
                                                Margin="0,0,8,0"/>
                                        <Button Content="清除"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Click="BtnClearCamouflageIcon_Click"
                                                materialDesign:ButtonAssist.CornerRadius="6"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 基本设置 · 触摸手势 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CogOutline" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="触摸手势" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="缩放/平移仅在双指触摸时触发" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="仅双指"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=ZoomPanTwoFingerOnly, Mode=TwoWay}"
                                          Checked="ToggleZoomPanTwoFingerOnly_Checked"
                                          Unchecked="ToggleZoomPanTwoFingerOnly_Unchecked"/>
                            </Grid>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- 书写设置 面板（索引 1） -->
                    <StackPanel x:Name="InkSettingsPanel">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=NavList, Path=SelectedIndex}" Value="1">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <!-- 书写设置 · 笔触粗细一致性 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatLineWeight" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="笔触粗细一致性" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="使不同缩放级别下书写的笔迹在同一缩放下粗细保持一致" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="开启"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=StrokeThicknessConsistencyEnabled, Mode=TwoWay}"
                                          Checked="ToggleStrokeThicknessConsistency_Checked"
                                          Unchecked="ToggleStrokeThicknessConsistency_Unchecked"/>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 书写设置 · 模拟压感（签字笔） -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Pen" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="模拟压感（签字笔）" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="无压感设备也能有轻微笔锋：低速略粗，高速略细，收笔尾尖" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" VerticalAlignment="Center"
                                          Content="开启"
                                          IsChecked="{Binding ElementName=SettingsWindowRoot, Path=SimulatedPressureEnabled, Mode=TwoWay}"
                                          Checked="ToggleSimulatedPressure_Checked"
                                          Unchecked="ToggleSimulatedPressure_Unchecked"/>
                            </Grid>
                        </materialDesign:Card>

                        <!-- 书写设置 · 平滑参数（高级） -->
                        <materialDesign:Card Padding="0" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Expander Expanded="SmoothingExpander_Expanded" Padding="0" Background="Transparent" BorderThickness="0">
                                <Expander.Header>
                                    <Grid Margin="4,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="TuneVariant" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                            <TextBlock Text="平滑参数" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                            <TextBlock Text="调整笔迹平滑算法的核心参数（高级选项）" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Grid>
                                </Expander.Header>

                                <StackPanel Margin="20,0,20,20">
                                    <!-- 启用自定义参数开关 -->
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="使用自定义参数" Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                            <TextBlock Text="关闭时使用内置默认值" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.6"/>
                                        </StackPanel>
                                        <CheckBox Grid.Column="1" VerticalAlignment="Center"
                                                  Content="开启"
                                                  IsChecked="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled, Mode=TwoWay}"
                                                  Checked="ToggleCustomSmoothing_Checked"
                                                  Unchecked="ToggleCustomSmoothing_Unchecked"/>
                                    </Grid>

                                    <Separator Margin="0,0,0,16"/>

                                    <!-- 笔输入参数 -->
                                    <TextBlock Text="笔输入参数" Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="0,0,0,12" FontWeight="Medium"/>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="重采样步长 (mm)" VerticalAlignment="Center" ToolTip="控制输入点的重采样间隔，值越小细节越多"/>
                                        <Slider Grid.Column="1" Minimum="0.3" Maximum="2.0" TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenStepMm, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenStepMm, StringFormat={}{0:F2}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="输出阈值 (mm)" VerticalAlignment="Center" ToolTip="移动距离小于此值时不输出点，防止微抖动"/>
                                        <Slider Grid.Column="1" Minimum="0.05" Maximum="0.5" TickFrequency="0.05" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenEpsilonMm, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenEpsilonMm, StringFormat={}{0:F2}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="最小截止频率 (Hz)" VerticalAlignment="Center" ToolTip="OneEuro 滤波器的最小截止频率，值越大响应越快但平滑度降低"/>
                                        <Slider Grid.Column="1" Minimum="0.5" Maximum="5.0" TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenFcMin, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenFcMin, StringFormat={}{0:F1}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Beta 系数" VerticalAlignment="Center" ToolTip="速度权重，值越大移动越快时响应越快"/>
                                        <Slider Grid.Column="1" Minimum="0.01" Maximum="0.2" TickFrequency="0.005" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenBeta, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenBeta, StringFormat={}{0:F3}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="导数截止频率 (Hz)" VerticalAlignment="Center" ToolTip="速度估计的滤波截止频率"/>
                                        <Slider Grid.Column="1" Minimum="0.5" Maximum="3.0" TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenDCutoff, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingPenDCutoff, StringFormat={}{0:F1}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Separator Margin="0,0,0,16"/>

                                    <!-- 手指输入参数 -->
                                    <TextBlock Text="手指输入参数" Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="0,0,0,12" FontWeight="Medium"/>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="重采样步长 (mm)" VerticalAlignment="Center" ToolTip="控制输入点的重采样间隔，值越小细节越多"/>
                                        <Slider Grid.Column="1" Minimum="0.3" Maximum="2.0" TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerStepMm, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerStepMm, StringFormat={}{0:F2}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="输出阈值 (mm)" VerticalAlignment="Center" ToolTip="移动距离小于此值时不输出点，防止微抖动"/>
                                        <Slider Grid.Column="1" Minimum="0.05" Maximum="0.5" TickFrequency="0.05" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerEpsilonMm, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerEpsilonMm, StringFormat={}{0:F2}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="最小截止频率 (Hz)" VerticalAlignment="Center" ToolTip="OneEuro 滤波器的最小截止频率，值越大响应越快但平滑度降低"/>
                                        <Slider Grid.Column="1" Minimum="0.5" Maximum="5.0" TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerFcMin, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerFcMin, StringFormat={}{0:F1}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Beta 系数" VerticalAlignment="Center" ToolTip="速度权重，值越大移动越快时响应越快"/>
                                        <Slider Grid.Column="1" Minimum="0.01" Maximum="0.2" TickFrequency="0.005" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerBeta, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerBeta, StringFormat={}{0:F3}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="导数截止频率 (Hz)" VerticalAlignment="Center" ToolTip="速度估计的滤波截止频率"/>
                                        <Slider Grid.Column="1" Minimum="0.5" Maximum="3.0" TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                Value="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerDCutoff, Mode=TwoWay}"
                                                IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                        <TextBlock Grid.Column="2" Text="{Binding ElementName=SettingsWindowRoot, Path=SmoothingFingerDCutoff, StringFormat={}{0:F1}}"
                                                   VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="Consolas"/>
                                    </Grid>

                                    <!-- 重置按钮 -->
                                    <Button Content="恢复默认参数"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Click="BtnResetSmoothingParameters_Click"
                                            materialDesign:ButtonAssist.CornerRadius="6"
                                            HorizontalAlignment="Left"
                                            IsEnabled="{Binding ElementName=SettingsWindowRoot, Path=CustomSmoothingEnabled}"/>
                                </StackPanel>
                            </Expander>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- 外观设置 面板（索引 2） -->
                    <StackPanel x:Name="AppearanceSettingsPanel">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=NavList, Path=SelectedIndex}" Value="2">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <!-- 外观设置 · 背景颜色 -->
                        <materialDesign:Card Padding="20" Margin="0,0,0,20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Width="48" Height="48" CornerRadius="8" Background="{DynamicResource PrimaryHueLightBrush}" Grid.Column="0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FormatColorFill" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <TextBlock Text="背景颜色" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontWeight="SemiBold"/>
                                    <TextBlock Text="自定义白板的背景颜色" Style="{StaticResource MaterialDesignBodyMediumTextBlock}" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>

                                <materialDesign:PopupBox x:Name="ColorPopupBox" Grid.Column="2" StaysOpen="True" PlacementMode="BottomAndAlignRightEdges">
                                    <materialDesign:PopupBox.ToggleContent>
                                        <Border CornerRadius="8" BorderThickness="1.5" BorderBrush="{DynamicResource MaterialDesignDivider}" Padding="12,8" Background="{DynamicResource MaterialDesignPaper}" Cursor="Hand" materialDesign:ElevationAssist.Elevation="Dp1">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Border Width="28" Height="28" CornerRadius="4" Margin="0,0,12,0" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesignDivider}" Background="{Binding ElementName=SettingsWindowRoot, Path=CurrentBrush}"/>
                                                <TextBlock Text="{Binding ElementName=SettingsWindowRoot, Path=CurrentColorHex}" VerticalAlignment="Center" Margin="0,0,8,0" FontFamily="Consolas"/>
                                                <materialDesign:PackIcon Kind="ChevronDown" VerticalAlignment="Center" Width="18" Height="18"/>
                                            </StackPanel>
                                        </Border>
                                    </materialDesign:PopupBox.ToggleContent>
                                    
                                    <StackPanel Width="280">
                                        <TextBlock Text="预设颜色" Margin="16,12" Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.7" FontWeight="Medium"/>
                                        <ItemsControl Margin="16,0,16,12">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#2E2F33" ToolTip="默认深色 (#2E2F33)" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#2E2F33"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#2F4F4F" ToolTip="深石板灰 (#2F4F4F)" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#2F4F4F"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#DCDCDC" ToolTip="浅灰色 (#DCDCDC)" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#DCDCDC"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#F5F5F5" ToolTip="米白色 (#F5F5F5)" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#F5F5F5"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Width="36" Height="36" Margin="0,0,8,8" Click="PresetColor_Click" Tag="#FFFFFF" ToolTip="纯白色 (#FFFFFF)" Style="{StaticResource MaterialDesignFloatingActionMiniButton}" BorderThickness="0">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#FFFFFF"/>
                                                </Button.Background>
                                            </Button>
                                        </ItemsControl>
                                        <Separator Margin="12,0"/>
                                        <Button Click="OpenColorPicker_Click" Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left" Padding="16,12" materialDesign:ButtonAssist.CornerRadius="0" Width="280" Height="48">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Palette" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="自定义颜色"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:PopupBox>

                                <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                        <TextBox x:Name="HexTextBox"
                                                 Width="180"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="输入 HEX 颜色值"
                                                 Text="{Binding ElementName=SettingsWindowRoot, Path=CurrentColorHex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 KeyDown="HexInput_KeyDown"
                                                 FontFamily="Consolas"
                                                 FontSize="13"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Content="恢复默认"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Tag="#2E2F33"
                                            Click="BtnResetColor_Click"
                                            materialDesign:ButtonAssist.CornerRadius="6"/>
                                </Grid>
                            </Grid>
                        </materialDesign:Card>
                    </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- 统一底部操作栏 -->
            <Border Grid.Row="2" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0" Background="{DynamicResource MaterialDesignPaper}" Padding="16,12" materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="BtnCancel" Click="BtnCancel_Click" Style="{StaticResource MaterialDesignOutlinedButton}" IsCancel="True" Margin="0,0,8,0" materialDesign:ButtonAssist.CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Close" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="取消" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnApply" Click="BtnApply_Click" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,8,0" materialDesign:ButtonAssist.CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CheckAll" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="应用" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnOk" Click="BtnOk_Click" Style="{StaticResource MaterialDesignRaisedButton}" IsDefault="True" materialDesign:ButtonAssist.CornerRadius="6">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Check" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="确定" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Window>
